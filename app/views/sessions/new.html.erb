<div class="row">
	<div class="form">
		<%= form_for(:session, url: { action: "create" }) do |f| %>
			<%= f.label :name %>
			<%= f.text_field :name %>

			<%= f.label :password %>
			<%= f.password_field :password %>

			<%= f.submit "Login", class: "btn btn-large btn-primary" %>
		<% end %>

		<%= link_to "Not registered? Sign up ", signup_path %> 
	</div>
</div>