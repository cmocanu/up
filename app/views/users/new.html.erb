<div class="row">
	<div class="form">

		<%= form_for(@user) do |f| %>

			<%= render "shared/error_messages", object: @user%>

			<%= f.label :name %>
			<%= f.text_field :name %>

			<%= f.label :password %>
			<%= f.password_field :password %>

			<%= f.submit "Create account", class: "btn btn-large btn-primary" %>	
		<% end %>
	</div>
</div>
